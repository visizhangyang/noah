.product-order-page {

  .select-client {
    display: flex;
    padding-right: 0;
    .label {
      max-width: 200px;
      width: 35%;
      padding-right: 10px;
    }
    .select {
      padding-right: 50px;
      font-size: 13px;
      color: $light;
      .placeholder {
        color: #9b9b97;
      }
    }
  }
  .unit-input {
    input {
      flex: 0 200px;
      padding-right: 10px;
    }
    .unit {
      float: right;
      color: $base-color;
      padding-right: 15px;
    }
  }

  .biggerthanbigger.item-fields-set-4 .item-field {
    font-size: 15px;
  }
}
